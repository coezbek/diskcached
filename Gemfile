source :rubygems

group :development, :test do
  gem 'rake'
end

group :development do
  gem 'rdoc'
end

group :benchmark do
  # for benchmark only
  # requires sudo apt-get install libsasl2-dev
  gem 'memcached'
end

group :test do
  gem 'rspec'
  gem 'rdoc-rubydoc', :git => 'git@github.com:rubyops/rdoc-rubydoc.git'
  gem 'simplecov', :require => false
end


